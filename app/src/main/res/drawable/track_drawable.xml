<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:width="58dp" android:height="20dp"
        android:gravity="center"
        >
        <shape>
            <corners android:radius="20dp"/>
            <solid android:color="@color/focusWhiteColor"/>
        </shape>

    </item>

    <item
        android:top="2dp"
        android:left="2dp"
        android:right="2dp"
        android:bottom="2dp"
        android:gravity="center">
        <shape>
            <corners android:radius="20dp"/>
            <solid android:color="@color/colorGray"/>
        </shape>

    </item>

    <item
        android:left="4dp"
        android:right="4dp"
        android:top="4dp"
        android:bottom="4dp"
        android:gravity="center">

        <shape>
            <solid android:color="@color/focusWhiteColor"/>
            <corners android:radius="20dp"/>
        </shape>

    </item>

</layer-list>

